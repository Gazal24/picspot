<p>ID : <%= @user.id %></p>
<p>Name : <%= @user.name %></p>
<p>Location : <%= @user.location %></p>
<p>Birthday : <%= @user.birthday %></p>
<p>Sex : <%= @user.sex %></p>
<h2>Friends</h2>
<% @friends.each do |f| %>
  <% friend = User.find(f) %>
<p>  <%= link_to friend.name, {:controller => 'user', :action => 'show', :id => f} %></p>
  <% end %>

  
<%= form_tag :action => 'search', :controller => 'user' %>
<p><label for="Search People">People</label>:
  <%= text_field 'query', 'name' %></p>
<p><%= submit_tag "Search" %> </p>
